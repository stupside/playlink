generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PLAYLINK_DATABASE_URL")
}

enum ContentType {
  TEXT
  IMAGE
  VIDEO
}

model Session {
  id Int @id @default(autoincrement())

  devices Device[] @relation()

  contents Content[] @relation()
}

model Device {
  id Int @id @default(autoincrement())

  ip    String
  agent String?

  sessionId Int

  session Session @relation(fields: [sessionId], references: [id])
}

model Content {
  id Int @id @default(autoincrement())

  type    ContentType
  subtype String

  value String

  sessionId Int

  session Session @relation(fields: [sessionId], references: [id])
}
